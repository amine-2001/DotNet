@model sav.Models.Claim

@{
    ViewData["Title"] = "Supprimer une Réclamation";
}

<h2>Supprimer une Réclamation</h2>

<div>
    <h3>Êtes-vous sûr de vouloir supprimer cette réclamation ?</h3>
    <div>
        <strong>Client :</strong> @Model.Client.Name
    </div>
    <div>
        <strong>Article :</strong> @Model.Article.Name
    </div>
    <div>
        <strong>Description :</strong> @Model.Description
    </div>
    <div>
        <strong>Statut :</strong> @Model.Status
    </div>
    <form asp-action="Delete" method="post">
        
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
