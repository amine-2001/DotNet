@model sav.Models.Client

@{
    ViewData["Title"] = "Détails du Client";
}

<h2>Détails du Client</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Email :</strong> @Model.Email</p>
        <p class="card-text"><strong>Téléphone :</strong> @Model.PhoneNumber</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-warning">Modifier</a>
    
</div>
